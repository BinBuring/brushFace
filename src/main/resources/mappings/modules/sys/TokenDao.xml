<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.uface.dao.TokenDao">

    <select id="selectByState" resultType="com.thinkgem.jeesite.modules.uface.entity.UfaceToken">
        SELECT token FROM `sys_uface_token` WHERE state = 1 limit 1
    </select>
   
    <insert id="insert">
        INSERT INTO sys_uface_token(token, state) VALUES(#{token}, '1')
    </insert>
    
    <delete id="delete">
        DELETE FROM sys_uface_token
    </delete>
    
</mapper>